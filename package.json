{
  "name": "auroral_node_agent",
  "version": "3.5.0",
  "description": "AURORAL agent",
  "main": "server.js",
  "dependencies": {
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "got": "^11.8.2",
    "ipaddr.js": "^2.0.1",
    "mustache": "^4.2.0",
    "redis": "^4.0.6",
    "stoppable": "^1.1.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/cron": "^1.7.3",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.12",
    "@types/got": "^9.6.11",
    "@types/jest": "^27.4.0",
    "@types/mustache": "^4.1.2",
    "@types/stoppable": "^1.1.1",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.7",
    "sonarqube-scanner": "^2.8.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "start": "node ./dist/src/server.js",
    "build": "tsc",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "jest --watch",
    "sonar": "node sonar-client.js",
    "build:watch": "tsc -w",
    "start:watch": "nodemon ./dist/src/server.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "prod": "concurrently \"npm run build\" \"npm run start\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/bavenir/auroral_node_agent.git"
  },
  "author": "Jorge Almela",
  "license": "MIT",
  "homepage": "https://bitbucket.org/bavenir/auroral_node_agent#readme",
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__mocks__/",
      "/__tests__/",
      "/scripts/",
      "/coverage/"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
